{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "excludeFiles": ".venv/**,*cache*/**,*__pycache__*/**,.git/**,public/**,tests/**,node_modules/**"
    }
  },
  "routes": [{ "src": "/(.*)", "dest": "api/main.py" }]
}
